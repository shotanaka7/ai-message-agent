{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "sql:default",
    "sql:allow-execute",
    "sql:allow-select",
    "sql:allow-close",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://api.chatwork.com" },
        { "url": "https://slack.com" },
        { "url": "https://api.anthropic.com" }
      ]
    }
  ]
}
